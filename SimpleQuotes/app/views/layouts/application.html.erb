<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title>Quips and Quotes :: <%= controller.controller_name.capitalize %></title>
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
	  <%= csrf_meta_tag %>
		<!-- #stylesheet: add my_styles using rails helper function# -->
		<%= stylesheet_link_tag "assets/stylesheets/my_styles" %>
		<!-- #javascript: add defaults using rails helper function# -->
		<%= javascript_include_tag :defaults -%>
		
	</head>

	<body>
		<div id="wrap">
	    <div id="header">
				<%= link_to(image_tag('quips_n_quotes.png'), home_path) %>
			</div>
			<br />

	    <div id="body">
				<p style="color: green" id="notice"><%= flash[:notice] %></p>

				<%= yield %>
				
			</div> <!-- end of body div -->

			<!-- #footer partial goes here# -->
			
		</div><!-- end of wrap div -->
	</body>
</html>